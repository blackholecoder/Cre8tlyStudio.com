<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- ✅ Required for all Mac App Store apps -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- ✅ Allows your app to read/write files the user explicitly selects -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- ✅ Allows network access (your app connects to cre8tlystudio.com) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- ✅ Optional: lets your app access downloaded/generated PDFs -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- ✅ Optional: temporary directory access for caching (used by Tauri) -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>

    <!-- ✅ Allows playback / caching of streamed video content -->
    <key>com.apple.security.assets.movies.read-write</key>
    <true/>

    <!-- ✅ Allow app to read cached blobs / PDFs / videos created in temp dirs -->
    <key>com.apple.security.files.temp.read-write</key>
    <true/>

    <!-- ✅ Allow your PDF viewer (PDF.js) to read local blob URLs -->
    <key>com.apple.security.files.downloads.read-only</key>
    <true/>
</dict>
</plist>
